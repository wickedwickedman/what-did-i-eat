<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:theme="@style/BasicTheme"
    tools:context=".Signup">

    <LinearLayout
        android:id="@+id/signupLinearLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/back"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingLeft="15dp"
                android:paddingRight="10dp"
                android:src="@drawable/button_back" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:fontFamily="@font/medium"
                android:gravity="center"
                android:paddingLeft="20dp"
                android:text="회원 가입"
                android:textColor="@color/black"
                android:textSize="25dp" />
        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <LinearLayout
                android:id="@+id/signupLinearLayout2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="20dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="7dp"
                    android:fontFamily="@font/medium"
                    android:text="이름"
                    android:textColor="@color/black_overlay"
                    android:textSize="16dp" />

                <EditText
                    android:id="@+id/signName"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_marginBottom="25dp"
                    android:background="@drawable/box_gray_underline"
                    android:ems="10"
                    android:fontFamily="@font/regular"
                    android:inputType="textPersonName"
                    android:maxLength="10"
                    android:text=""
                    android:textColor="@color/black" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="7dp"
                    android:fontFamily="@font/medium"
                    android:text="아이디"
                    android:textColor="@color/black_overlay"
                    android:textSize="16dp" />

                <EditText
                    android:id="@+id/signID"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_marginBottom="25dp"
                    android:background="@drawable/box_gray_underline"
                    android:ems="10"
                    android:fontFamily="@font/regular"
                    android:hint="6~20자"
                    android:inputType="text"
                    android:maxLength="20"
                    android:text=""
                    android:textColor="@color/black" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="7dp"
                    android:fontFamily="@font/medium"
                    android:text="생년월일"
                    android:textColor="@color/black_overlay"
                    android:textSize="16dp" />

                <EditText
                    android:id="@+id/signBirth"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_marginBottom="25dp"
                    android:background="@drawable/box_gray_underline"
                    android:ems="10"
                    android:fontFamily="@font/regular"
                    android:hint="19990101"
                    android:inputType="numberDecimal"
                    android:maxLength="8"
                    android:text=""
                    android:textColor="@color/black" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="7dp"
                    android:fontFamily="@font/medium"
                    android:text="비밀번호"
                    android:textColor="@color/black_overlay"
                    android:textSize="16dp" />

                <EditText
                    android:id="@+id/signPW"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_marginBottom="25dp"
                    android:background="@drawable/box_gray_underline"
                    android:ems="10"
                    android:fontFamily="@font/regular"
                    android:hint="8~20자"
                    android:inputType="textPassword"
                    android:maxLength="20"
                    android:text=""
                    android:textColor="@color/black" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="7dp"
                    android:fontFamily="@font/medium"
                    android:text="비밀번호 확인"
                    android:textColor="@color/black_overlay"
                    android:textSize="16dp" />

                <EditText
                    android:id="@+id/signPW2"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_marginBottom="25dp"
                    android:background="@drawable/box_gray_underline"
                    android:ems="10"
                    android:fontFamily="@font/regular"
                    android:hint="비밀번호 재입력"
                    android:inputType="textPassword"
                    android:maxLength="20"
                    android:text=""
                    android:textColor="@color/black" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="7dp"
                    android:fontFamily="@font/medium"
                    android:text="이메일"
                    android:textColor="@color/black_overlay"
                    android:textSize="16dp" />

                <EditText
                    android:id="@+id/signMail"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_marginBottom="25dp"
                    android:background="@drawable/box_gray_underline"
                    android:ems="15"
                    android:fontFamily="@font/regular"
                    android:hint="hello@google.com"
                    android:inputType="textEmailAddress"
                    android:maxLength="30"
                    android:text=""
                    android:textColor="@color/black" />

            </LinearLayout>
        </ScrollView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/signupButton"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_margin="15dp"
                android:background="@drawable/box_blue"
                android:fontFamily="@font/medium"
                android:gravity="center"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"
                android:text="회원가입"
                android:textColor="@color/white"
                android:textSize="18dp" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>